/* Based on https://github.com/tsconfig/bases/blob/501da2bcd640cf95c95805783e1012b992338f28/bases/node22.json */
{
  "compilerOptions": {
    "lib": ["es2023"],
    "module": "node16",
    "target": "es2022",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node16",
    "outDir": "dist",
    "typeRoots": ["./types", "./node_modules/@types"]
  },
  "include": [
    "hardhat.config.ts", // Explicitly include the config file
    "scripts",
    "test",
    "typechain-types", // If you are generating types
    "./**/*.ts", // General inclusion for all .ts files in subdirectories
    "types/**/*"
  ]
}
